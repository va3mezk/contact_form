<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blacknuwe"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/iv_nuwe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:contentDescription="@string/nuwe_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/nuwe" />

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:text="@string/info_text"
        android:textColor="@color/secundary_main"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_nuwe" />

    <androidx.cardview.widget.CardView
        android:layout_width="313dp"
        android:layout_height="500dp"
        android:layout_marginTop="16dp"
        android:background="@color/fragment"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_info">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="502dp"
            android:background="@color/fragment">

            <TextView
                android:id="@+id/tv_infopersonal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="@string/info_title"
                android:textColor="@color/secundary_main"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="278dp"
                android:layout_height="36dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/viewbox"
                android:ems="10"
                android:fontFamily="@font/montserrat"
                android:hint="Nombre*"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:textColor="@color/secundary_main"
                android:textColorHint="@color/prebackground"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_infopersonal" />

            <EditText
                android:id="@+id/et_email"
                android:layout_width="278dp"
                android:layout_height="36dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/viewbox"
                android:ems="10"
                android:fontFamily="@font/montserrat"
                android:hint="Correo Electrónico*"
                android:inputType="textEmailAddress"
                android:paddingLeft="10dp"
                android:textColor="@color/secundary_main"
                android:textColorHint="@color/prebackground"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_name" />

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="278dp"
                android:layout_height="36dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/viewbox"
                android:ems="10"
                android:fontFamily="@font/montserrat"
                android:hint="Teléfono*"
                android:inputType="phone"
                android:paddingLeft="10dp"
                android:textColor="@color/secundary_main"
                android:textColorHint="@color/prebackground"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_email" />

            <Spinner
                android:id="@+id/sp_country"
                android:layout_width="278dp"
                android:layout_height="36dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/viewbox"
                android:ems="10"
                android:fontFamily="@font/montserrat"
                android:hint="País*"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:textColor="@color/secundary_main"
                android:textColorHint="@color/prebackground"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_phone"
                tools:ignore="SpeakableTextPresentCheck" />

            <EditText
                android:id="@+id/et_description"
                android:layout_width="277dp"
                android:layout_height="143dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/viewbox"
                android:ems="10"
                android:fontFamily="@font/montserrat"
                android:gravity="start"
                android:hint="Descripción"
                android:inputType="textMultiLine"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:textColor="@color/secundary_main"
                android:textColorHint="@color/prebackground"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sp_country" />

            <Button
                android:id="@+id/vb_cancel"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/button_invert"
                android:fontFamily="@font/montserrat"
                android:text="Cancelar"
                android:textAllCaps="false"
                android:textColor="@color/button"
                android:textSize="11sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_description" />

            <Button
                android:id="@+id/vb_acept"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/button_normal"
                android:fontFamily="@font/montserrat"
                android:text="Enviar"
                android:textAllCaps="false"
                android:textColor="@color/secundary_main"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_description" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>